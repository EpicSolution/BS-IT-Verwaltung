{% extends 'base.html.twig' %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <a href="{{ url('add_room') }}" class="float-right btn btn-success">
        <i class="fas fa-plus-circle"></i>
        <span>Raum erstellen</span>
    </a>
    <h1>Raum Liste</h1>
    <table class="table table-striped">
        <thead>
            {% for data in roomHeader %}
                <th scope="col">{{ data }}</th>
            {% endfor %}
            <th scope="col">Aktion</th>
        </thead>
        <tbody>
            {% for room in rooms %}
                <tr>
                   <th scope="col">{{ room.id }}</th>
                   <td>{{ room.nr }}</td>
                   <td>{{ room.bezeichnung }}</td>
                   <td>{{ room.notiz }}</td>
                   <td>
                       <div class="btn-group">
                            <a href="{{ url('delete_room', {'id': room.id}) }}" class="btn btn-danger" role="button">
                                <span>Löschen</span>
                            </a>
                            <a href="{{ url('edit_room', {'id': room.id}) }}" class="btn btn-info" role="button">
                                <span>Bearbeiten</span>
                            </a>
                       </div>
                   </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
