{% extends 'base.html.twig' %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <a href="{{ url('list_user') }}" class="float-right btn btn-secondary">
        <i class="fas fa-chevron-left"></i>
        <span>Alle Komponentenarten anzeigen</span>
    </a>
    <h1>Komponentenarten hinzufügen</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        var addNewFieldButton = $('#form_neu');

        addNewFieldButton.click(function () {
            var form = $(this).closest('form');

            console.log(form);
        })
    </script>
{% endblock %}
