{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <a href="{{ url('list_lieferant') }}" class="float-right btn btn-secondary">
        <i class="fas fa-chevron-left"></i>
        <span>Lieferanten anzeigen</span>
    </a>
    <h2>Lieferant hinzufügen</h2>
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-row">
                            {{form_row(form.Firmenname)}}
                        </div>
                        <div class="form-row">
                            {{form_row(form.Strasse)}}
                        </div>
                        <div class="form-row">
                            {{form_row(form.Plz)}}
                        </div>
                        <div class="form-row">
                            {{form_row(form.Ort)}}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-row">
                            {{form_row(form.Tel)}}
                        </div>
                        <div class="form-row">
                            {{form_row(form.Mobil)}}
                        </div>
                        <div class="form-row">
                            {{form_row(form.Fax)}}
                        </div>
                        <div class="form-row">
                            {{form_row(form.Email)}}
                        </div>
                    </div>
                </div>
                <!-- SUBMIT BUTTON -->
                {{form_row(form.Anlegen)}}
                <!-- SUBMIT BUTTON -->
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
