{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="row">
        <div class="col-lg-8 offset-2">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <div class="form-group row">
                    <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="far fa-user"></i>
                            </div>
                        </div>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-lock-open"></i>
                            </div>
                        </div>
                        <input type="password" class="form-control" id="password" name="_password" required="required">
                    </div>
                </div>
                <!--div class="form-group row">
                    <div class="input-group mb-2 mr-sm-2">
                        <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" >
                        <label class="form-check-label" for="remember_me">
                            {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div-->
                <div class="form-group row">
                    <div class="input-group mb-2 mr-sm-2">
                        <input type="submit" class="btn btn-primary login-button" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            </form>
        </div>
    </div>


    {% if error %}
        <div class="row">
            <div class="col-lg-8 offset-2">
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            </div>
        </div>
        
    {% endif %}



    
{% endblock fos_user_content %}
